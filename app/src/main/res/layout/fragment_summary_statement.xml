<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SummaryStatementFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textSummaryHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/common_20_dp"
            android:text="Summary"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            android:textStyle="bold" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textExpSummaryList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_20_dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="@dimen/common_20_dp"
                android:layout_marginEnd="@dimen/common_20_dp"
                android:layout_marginBottom="@dimen/common_20_dp"
                android:text="Expenses"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textExpenseValues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="@dimen/common_20_dp"
                android:layout_marginBottom="@dimen/common_20_dp"
                android:text="values"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textExpSummaryListNames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_20_dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="@dimen/common_20_dp"
                android:layout_marginEnd="@dimen/common_20_dp"
                android:layout_marginBottom="@dimen/common_20_dp"
                android:text="Enter Values First...."
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textExpenseValuesValues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="@dimen/common_20_dp"
                android:layout_marginBottom="@dimen/common_20_dp"
                android:text=" "
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textReturnsSummaryList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_20_dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="@dimen/common_20_dp"
                android:layout_marginEnd="@dimen/common_20_dp"
                android:layout_marginBottom="@dimen/common_20_dp"
                android:text="Retruns"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textReturnsValues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="@dimen/common_20_dp"
                android:layout_marginBottom="@dimen/common_20_dp"
                android:text="Values"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textReturnsSummaryListNames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_20_dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="@dimen/common_20_dp"
                android:layout_marginEnd="@dimen/common_20_dp"
                android:layout_marginBottom="@dimen/common_20_dp"
                android:text="Enter Values First...."
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textReturnsValuesValues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="@dimen/common_20_dp"
                android:layout_marginBottom="@dimen/common_20_dp"
                android:text=" "
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|left"
            android:layout_margin="@dimen/common_20_dp"
            android:text="Summary :"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            android:textStyle="bold" />









    </LinearLayout>



</FrameLayout>